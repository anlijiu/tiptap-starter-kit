{
  "compilerOptions": {
    "target": "ES2019",
    "module": "ESNext",
    "strict": true,
    "jsx": "react",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "allowJs": true,
    "checkJs": false,
    "outDir": "lib",
    "paths": {
      "@an/*": ["packages/*/dist", "packages/*/src"]
    },
    "lib": ["ESNext", "DOM", "DOM.Iterable", "ScriptHost"]
  },
  "files": ["./env.d.ts"],
  "include": ["**/*.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["**/node_modules", "**/dist"]
}
